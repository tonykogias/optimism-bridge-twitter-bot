{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "outDir": "dist",
    "typeRoots": [],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
